{
  "compilerOptions": {
    "target": "es2016",                               
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@test/*": ["test/*"],
      "@public/*": ["public/*"]
    },
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "strict": true,                                     
    "skipLibCheck": true,
    "outDir": "./dist"
  }
}
